# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*.{js,ts}]
end_of_line = lf
insert_final_newline = true
charset = utf-8
indent_style = space
indent_size = 2

[*.{html,htm}]
end_of_line = lf
insert_final_newline = true
charset = utf-8
indent_style = space
indent_size = 2

[*.css]
end_of_line = lf
insert_final_newline = true
charset = utf-8
indent_style = space
indent_size = 2

[*.{xml,json,json5,yml,yaml,toml}]
end_of_line = lf
insert_final_newline = true
charset = utf-8
indent_style = space
indent_size = 2

[*.md]
end_of_line = lf
insert_final_newline = true
charset = utf-8
indent_style = space
indent_size = 2
